<section id="found-pet">
  <div class="header">
    <div class="back-button">
      <a href="#">&lt;</a>
    </div>
    <div class="title">
      Found/Sighted Pet
    </div>
  </div>
  <div class="container-fluid">
    <%= simple_form_for @sighting, html: { class: 'form-vertical' } do |f| %>
      <%= f.input :images %>
      <%= f.input :pet_type %>
      <%= f.input :address %>
      <%= f.input :date_seen %>
      <%= f.input :note %>
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</section>

