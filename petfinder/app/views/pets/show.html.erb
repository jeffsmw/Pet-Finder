<div>
  <h1><%= @pet.name %></h1>
  <h3>
    <%= @pet.color %> <%= @pet.sex %> <%= @pet.pet_type %>
  </h3>
  <h4>
    <% if @pet.age.present? %>
      <%= @pet.age %> years old
    <% else %>
      Age not provided
    <% end %>
  </h4>

  <p>
    <% if @pet.note.present? %>
      <%= @pet.note %>
    <% end %>
  </p>

  <p>Last seen at: <%= @pet.latitude %>N, <%= @pet.longitude %>W</p>
</div>
